{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blockviz.xyz/schemas/flow.schema.json",
  "title": "BlockViz Flow",
  "type": "object",
  "additionalProperties": false,
  "required": ["flow_id", "chain", "generated_at", "nodes", "edges"],
  "properties": {
    "flow_id": {
      "type": "string",
      "description": "Identifier for the flow artifact."
    },
    "chain": {
      "type": "string",
      "description": "Blockchain network identifier (e.g., ethereum, polygon)."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this flow artifact was generated."
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/node" }
    },
    "edges": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/edge" }
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata.",
      "additionalProperties": true
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "description": "Unique node id in this artifact." },
        "type": {
          "type": "string",
          "description": "Node type.",
          "enum": ["address", "contract", "exchange", "entity", "unknown"]
        },
        "label": { "type": "string", "description": "Optional display label." },
        "chain_address": {
          "type": "string",
          "description": "Optional on-chain address (if applicable)."
        }
      }
    },
    "edge": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "target", "amount", "asset", "timestamp"],
      "properties": {
        "source": { "type": "string", "description": "Source node id." },
        "target": { "type": "string", "description": "Target node id." },
        "amount": { "type": "number", "description": "Transferred amount (raw numeric value)." },
        "asset": { "type": "string", "description": "Asset symbol or identifier (e.g., ETH, USDC)." },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  }
}
